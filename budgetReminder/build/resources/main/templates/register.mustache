{{>layouts/loginHeader}}

<style>
    .register-wrapper {
        font-family: 'Goorm Sans', sans-serif;
        text-align: center;
        margin-top: 30px;
    }

    .form-container {
        display: grid;
        grid-template-columns: 150px 250px;
        gap: 10px 15px;
        max-width: 500px;
        margin: 0 auto;
        align-items: center;

        border: 2px solid #ccc;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .submit-button{
        grid-column: 1 / span 2;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #f0d005;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }


    .submit-button2 {
        grid-column: 1 / span 2;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #949494;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

    .form-text {
        grid-column: 1 / span 2;
        font-size: 0.9em;
        color: #666;
        text-align: left;
        margin-left: 150px;
    }
</style>

<div class="register-wrapper">
    <h2>회원가입</h2>
    <form action="/register/new" method="post">
        <div class="form-container">
            <label for="loginId">아이디:</label>
            <input type="text" id="loginId" name="loginId" />
            <div class="form-text">아이디는 영어와 숫자 구성이어야 합니다.</div>

            <label for="password">비밀번호:</label>
            <input type="text" id="password" name="password" />

            <button type="submit" class="submit-button">회원가입</button>
            <a href="/login" class="submit-button2">뒤로 가기</a>
        </div>
    </form>
</div>


{{>layouts/footer}}