{{>layouts/loginHeader}}

<style>
    .page-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 50px;
        max-width: 800px;
        margin: 50px auto;
        align-items: center;
        font-family: 'Goorm Sans', sans-serif;
    }

    .login-box {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .login-box h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-form {
        display: grid;
        grid-template-columns: 100px 1fr;
        gap: 10px 10px;
        align-items: center;
    }

    .submit-button {
        grid-column: 1 / span 2;
        margin-top: 15px;
    }

    .register-box {
        text-align: center;
    }

    .register-box a {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f0d005;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

    .register-box a:hover {
        background-color: #deaf04;
    }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="page-container">
    <div class="login-box">
        <h2>로그인</h2>
        <form method="post" action="/login">
            <div class="login-form">
                <label for="loginId">아이디:</label>
                <input type="text" id="loginId" name="loginId" />
                <label for="password">비밀번호:</label>
                <input type="password" id="password" name="password" />
                <button type="submit" class="submit-button">로그인</button>
            </div>
        </form>
        {{#error}}
            <div class="error-message">아이디 또는 비밀번호가 올바르지 않습니다.</div>
        {{/error}}
    </div>

    <div class="register-box">
        <h2>아직 회원이 아니시군요!</h2>
        <a href="/register">회원가입</a>
    </div>
</div>



{{>layouts/footer}}
