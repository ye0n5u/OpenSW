{{>layouts/header}}

<style>
    .flex-container {
        display: flex;
        gap: 20px;
    }
    .left-table {
        flex: 1;
    }
    .right-form {
        flex: 1;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 30px;
    }
</style>

{{#budget}}
    <form action="/budgets/update" method="post">
        <input name="id" type="hidden" value="{{id}}"/>
        <div class="mb-3">
            <label for="memo" class="form-label">사용처 및 날짜</label>
            <input type="text" class="form-control" name="memo" value={{memo}}>
            <div id="memoExplain" class="form-text">언제, 어떤 일에 활용하셨나요?</div>
        </div>
        <div class="mb-3">
            <label for="cash" class="form-label">지출 금액</label>
            <input type="number" class="form-control" name="cash" value={{cash}}>
            <div id="cashExplain" class="form-text">금액을 수정해주세요.</div>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary">완료</button>
            <a href="/main" class="btn btn-primary">메인</a>
            <a href="/budgets/list" class="btn btn-primary">뒤로</a>
        </div>
    </form>

{{/budget}}

{{>layouts/footer}}