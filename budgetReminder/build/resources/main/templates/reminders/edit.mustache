{{>layouts/header}}

<style>
    .flex-container {
        display: flex;
        gap: 20px;
    }
    .left-table {
        flex: 1;
    }
    .right-form {
        flex: 1;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 30px;
    }
</style>

{{#reminder}}
    <form action="/reminders/update" method="post">
        <input name="id" type="hidden" value="{{id}}"/>
        <div class="mb-3">
            <label for="date" class="form-label">날짜</label>
            <input type="date" class="form-control" name="date" value={{date}}>
            <div id="dateExplain" class="form-text">할 일의 날짜를 변경해주세요.</div>
        </div>
        <div class="mb-3">
            <label for="todo" class="form-label">할 일을 수정해주세요.</label>
            <input type="text" class="form-control" name="todo" value={{todo}}>
        </div>
        <div class="button-group" >
            <button type="submit" class="btn btn-primary">완료</button>
            <a href="/main" class="btn btn-primary">메인</a>
            <a href="/reminders/list" class="btn btn-primary">뒤로</a>
        </div>
    </form>

{{/reminder}}

{{>layouts/footer}}